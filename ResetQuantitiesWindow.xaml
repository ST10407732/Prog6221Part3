<Window x:Class="RecipeAppWPF_PoePart3.ResetQuantitiesWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RecipeAppWPF_PoePart3"
        mc:Ignorable="d"
        Title="ResetQuantitiesWindow" Height="450" Width="800">
    <Grid Background="LightGray">
        <StackPanel Margin="20">
            <TextBlock Text="Enter Recipe Name to Reset:" FontWeight="Bold" Margin="0 0 0 10"/>
            <TextBox x:Name="RecipeNameTextBox" Margin="0 0 0 10" Width="200"/>
            <Button Content="Reset Quantities" Click="ResetQuantitiesButton_Click" Margin="0 10 0 10" HorizontalAlignment="Left"/>
            <Border BorderBrush="Black" BorderThickness="1" Height="300" Margin="0 10">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <TextBlock x:Name="ResetRecipeDetailsTextBlock" Margin="10" TextWrapping="Wrap" FontSize="14"/>
                </ScrollViewer>
            </Border>
            <Button Content="Back to Menu" Click="CancelButton_Click" HorizontalAlignment="Left" Margin="0 10"/>
        </StackPanel>
    </Grid>
</Window>
